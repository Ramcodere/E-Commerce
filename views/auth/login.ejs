
 <%-include('../partials/header')%>
<%-include('../partials/navbar')%>
<%-include('../partials/flash')%>


<div class="position-relative">
    <!-- Animated image -->
    <div class="row justify-content-center">
        <img src="https://images.pexels.com/photos/5632386/pexels-photo-5632386.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" class="img-cover" alt="...">
        <div class="position-absolute top-50 start-50 translate-middle col-md-6">
            <div class="card border-0 shadow-lg">
                <div class="card-body p-4">
                    <h2 class="text-center mb-4">Welcome Back!</h2>
                    <form action="/login" method="POST">
                        <div class="mb-3">
                            <input type="text" class="form-control rounded-pill" name="username" id="username" placeholder="Username" required>
                        </div>
                        <div class="mb-3">
                            <input type="password" class="form-control rounded-pill" name="password" id="password" placeholder="Password" required>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill w-50">Login</button>
                        </div>
                    </form>
                    <div class="text-center mt-3">
                        <p class="mb-0">Don't have an account? <a href="/register">Sign up here</a>.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%-include('../partials/footer')%>

